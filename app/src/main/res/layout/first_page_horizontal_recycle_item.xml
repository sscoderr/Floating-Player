<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <RelativeLayout
            android:id="@+id/rel_for_pos"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fph_thumbnail"
                    android:layout_width="@dimen/grid_item"
                    android:layout_height="@dimen/grid_item"
                    android:scaleType="centerCrop">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/grid_item"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_below="@+id/rel_for_pos"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/fph_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurdistan"
                android:textSize="10sp"
                android:gravity="center">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>

