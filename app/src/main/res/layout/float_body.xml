<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="190dp">

        <WebView
            android:layout_width="fill_parent"
            android:layout_height="190dp"
            android:id="@+id/mWebView"
            android:background="#000">

        </WebView>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:id="@+id/clickRelative"
            android:visibility="invisible">

        </RelativeLayout>
    </RelativeLayout>

    <!--<include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_webview_include" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#262626">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtVideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Title"
                android:textColor="#FFF"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_repeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_for_moreoption_button"
                android:scaleType="center"
                android:src="@mipmap/repeat_icon_for_float" />

            <ImageView
                android:id="@+id/img_suffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_for_moreoption_button"
                android:scaleType="center"
                android:src="@mipmap/suffle_icon_for_float" />

            <ImageView
                android:id="@+id/img_stopingfinishvideo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/selector_for_moreoption_button"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/autoplay_off" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cizgi"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_service_similar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/service_button_design"
                android:text="SIMILAR" />

            <Button
                android:id="@+id/btn_service_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/service_button_design"
                android:text="SEARCH" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativesimilar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ListView
                    android:id="@+id/mListForFloat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />

                <ProgressBar
                    android:id="@+id/myPBForPlayedVideosList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminateDrawable="@drawable/progresbar"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/relativesearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="3dp"
                android:visibility="visible">


                <EditText
                    android:id="@+id/editText_searchservice"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/service_search_textview_design"
                    android:hint="@string/search"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ListView
                        android:id="@+id/service_search_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp" />

                    <ListView
                        android:id="@+id/service_searchvideo_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/service_search_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>